<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="../../admin/admin.css" rel="stylesheet" />
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <script src="https://kit.fontawesome.com/492cb427cb.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/JavaScript.js"></script>

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    @*sidebar*@

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Css2/style.css">
    <style>
        .mystyle {
           transform:translateX(-100%);
        }
        .move {
            transform: translateX(30px);
            z-index:1;
        }
        .content {
            transform: translateX(-250px);
            transform: translateX(-187px);
        }
    </style>
    <script>
        function myFunction() {
            var element = document.getElementById("sidebar");
            element.classList.toggle('mystyle');

            var button = document.getElementById("sidebarCollapse");
            button.classList.toggle('move');

            var content = document.getElementById("content");
            content.classList.toggle('content');
  
        }
    </script>
</head>
@{
    var user = (DoAnNhanh.Models.Tk)HttpContext.Current.Session["user"];
}
<body class="full-color">
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" >
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary" onclick="myFunction()">
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>
            <div class="p-4 pt-5">
                <h1><a href="index.html" class="logo">WELCOME</a></h1>
                <ul class="list-unstyled components mb-5">
                    @{

                        if (user.Quyen.TenQuyen == "Admin")
                        {


                            <li class="active">
                                <a href="~/Tks">
                                    Danh
                                    sách tài khoản
                                </a>

                            </li>

                            <li>
                                <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false"
                                   class="dropdown-toggle">Thống kê doanh thu</a>
                                <ul class="collapse list-unstyled" id="pageSubmenu">
                                    <li>
                                        <a href="~/HoaDons">Hóa Đơn</a>
                                    </li>
                                    <li>
                                        <a href="#">Page 2</a>
                                    </li>
                                    <li>
                                        <a href="#">Page 3</a>
                                    </li>
                                </ul>
                            </li>

                            <li>
                                <a href="~/Menus">Menu</a>
                            </li>


                            <li>
                                <a href="#Kho" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Kho</a>
                                <ul class="collapse list-unstyled" id="Kho">
                                    <li>
                                        <a href="~/MonAns">Món ăn</a>
                                    </li>
                                    <li>
                                        <a href="~/Loais">Loại</a>
                                    </li>
                                    <li>
                                        <a href="~/KhuyenMais">Khuyến mãi</a>
                                    </li>
                                    <li>
                                        <a href="~/Comboes">Combo</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    }

                   @* <li>
                        <a href="~/ThanhToan">Thanh Toán</a>
                    </li>*@
                    <li>
                        <a href="~/GioHang/ShowToCart">Thanh Toán</a>
                    </li>



                </ul>
                <ul>
                    <a href="@Url.Action("LogOut","Login")" style="color:black"> <i class="fa-solid fa-right-from-bracket" style="font-size: 36px;"> </i>  </a>
                </ul>





            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">

            @RenderBody()
        </div>
    </div>

    @*    <script src="~/js/jquery.min.js"></script>
        <script src="~/js/popper.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/main.js"></script>*@
</body>
</html>