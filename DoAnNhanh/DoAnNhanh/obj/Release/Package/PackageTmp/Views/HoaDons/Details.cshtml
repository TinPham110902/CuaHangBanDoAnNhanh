@model DoAnNhanh.Models.HoaDon
@using DoAnNhanh.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>HoaDon</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Mã Hóa Đơn</th>
                <th>Người tạo</th>
                
            </tr>

        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.MaHd
                </td>
                <td>
                    @Model.Tk
                </td>
            </tr>
        </tbody>
    </table>


    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model.CT_HD)
            {
                <tr>
                    <td>@item.MonAn.TenMa</td>
                    <td>@string.Format("{0:#,0}", @item.MonAn.Gia) VND</td>
                    <td>@item.Sl</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5" style="text-align:right">
                    Tổng:    @string.Format("{0:#,0}", Model.ThanhTien) VND

                </td>
            </tr>
        </tfoot>
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MaHd }) |
    @Html.ActionLink("Back to List", "Index")
</p>
