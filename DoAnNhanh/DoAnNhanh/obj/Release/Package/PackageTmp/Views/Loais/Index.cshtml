@model IEnumerable<DoAnNhanh.Models.Loai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tab">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link " href="~/MonAns">Danh Sách Món ĂN</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="~/Loais">Loại</a>
